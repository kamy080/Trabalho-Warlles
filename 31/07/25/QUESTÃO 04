#include <stdio.h>

int main() {
    int opcao;
    float a, b;

    printf("1-Soma\n2-Subtracao\n3-Multiplicacao\n4-Divisao\nEscolha: ");
    scanf("%d", &opcao);

    printf("Digite dois numeros: ");
    scanf("%f %f", &a, &b);

    switch (opcao) {
        case 1:
            printf("Resultado: %.2f\n", a + b);
            break;
        case 2:
            printf("Resultado: %.2f\n", a - b);
            break;
        case 3:
            printf("Resultado: %.2f\n", a * b);
            break;
        case 4:
            if (b != 0)
                printf("Resultado: %.2f\n", a / b);
            else
                printf("Nao pode dividir por zero!\n");
            break;
        default:
            printf("Opcao invalida!\n");
    }

    return 0;
}

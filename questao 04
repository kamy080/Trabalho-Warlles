programa {
  funcao inicio() {
    
    real n1,n2,n3,n4,media_aritmetica

    escreva( "informe a 1° nota: \n")
    leia(n1)

    escreva( "informe a 2° nota: \n")
    leia(n2)

    escreva( "informe a 3° nota: \n")
    leia(n3)

    escreva( "informe a 4° nota: \n")
    leia(n4)    

    media_aritmetica = (n1+n2+n3+n4)/4

    escreva("a média é ", media_aritmetica)

  }
}
